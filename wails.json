{
  "name": "gostly",
  "outputfilename": "gostly",
  "frontend:install": "npm install",
  "frontend:build": "npm run build",
  "frontend:dev:watcher": "npm run dev",
  "frontend:dev:serverUrl": "auto",
  "author": {
    "name": "imansprn",
    "email": "your-email@example.com"
  },
  "info": {
    "companyName": "Gostly",
    "productName": "Gostly - GOST Proxy Manager",
    "productVersion": "1.0.0",
    "copyright": "Copyright........",
    "comments": "Built using Wails (https://wails.io)"
  },
  "build": {
    "icon": "build/appicon.png",
    "platforms": [
      "darwin/amd64",
      "darwin/arm64",
      "windows/amd64"
    ],
    "nsisType": "multiple",
    "nsisTemplate": "build/windows/installer.nsh"
  },
  "mac": {
    "icon": "appicon.icns",
    "category": "public.app-category.developer-tools",
    "minimumSystemVersion": "10.13.0",
    "entitlements": "build/darwin/entitlements.plist",
    "info": {
      "CFBundleURLTypes": [
        {
          "CFBundleURLName": "gostly",
          "CFBundleURLSchemes": ["gostly"]
        }
      ]
    }
  },
  "windows": {
    "icon": "build/appicon.png",
    "webview2Loader": "embed",
    "nsisType": "multiple"
  }
}
